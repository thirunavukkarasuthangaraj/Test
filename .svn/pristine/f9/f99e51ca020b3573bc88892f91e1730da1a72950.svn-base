.directory-header{
    background-color: $directory-header-bg;


    & .navbar-header{
        a{
            img{
                height: 51px;
            }
        }
    }

    & .nav{
          li{
              height:auto;

              & .link{
                    text-decoration: underline;
                    color: #2c60d6;
               }

                &.button{
                        a{
                            background-color: $primary-bg;
                            padding: 8px;
                            margin: 7.5px 0;
                            color: $primary-fg;
                            font-weight: 600;
                            font-size: 14px;
                        }
                }
                a{
                    font-size: 14px;
                    height:auto;
                }
            }
        }
}
