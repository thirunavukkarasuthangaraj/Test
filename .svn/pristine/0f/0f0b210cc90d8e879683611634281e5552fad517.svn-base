.custom-card {
  border-radius: 3px;
  box-shadow: 0px 1px 4px 0px rgba(159, 158, 160, 0.6);
  border: none;

  & .card-header {
    border-radius: 0px;
    border: none;
    font-size: $font-size;
  }

  & .card-body {
    padding: 16px;
  }
}

.custom-shadow {
  border-radius: 0px;
  box-shadow: 0px 1px 3px 0px rgba(171, 169, 169, 0.77);
  border: none;
  background-color: #fff;
  padding: 16px;
}