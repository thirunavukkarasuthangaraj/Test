import { Component, OnInit } from '@angular/core';
import { ActivatedRoute, Router } from '@angular/router';
import { ApiService } from 'src/app/services/api.service';
import { UtilService } from 'src/app/services/util.service';

@Component({
  selector: 'app-directory-specialty',
  templateUrl: './directory-specialty.component.html',
  styleUrls: ['./directory-specialty.component.scss']
})
export class DirectorySpecialtyComponent implements OnInit {

  hcpType = ''
  specialitiesData = []
  constructor(private aroute: ActivatedRoute, private api: ApiService, private router: Router, private util:UtilService) {
    this.aroute.params.subscribe(res => {
      // console.log(res)
      this.hcpType = res.hcptype
    })
  }

  ngOnInit() {
    window.scroll({
      top: 0,
      left: 0,
      behavior: 'smooth'})
   this.getHCPspecialities()
  }

  getHCPspecialities(){
  this.util.startLoader()
    this.api.query('healthcare/get/hcpspecialities?hcpcode='+ this.hcpType +'&offset=0&limit=20').subscribe(res=>{
      this.util.stopLoader()
      if(res != null){
        this.specialitiesData = res.data.hcptypes
      }else{

      }

    },err => {
      this.util.stopLoader(); 
    })
  }

}
