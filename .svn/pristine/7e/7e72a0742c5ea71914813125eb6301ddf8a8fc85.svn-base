<div class="authentication app-content background">
  <!-- <div class="color-line"></div> -->
  <div class=" container padding-bottom-40">
    <div class="m-t-5-8-rem row">
    <div class="col-sm-12 col-md-5" style=" margin-top: 175px;">
      <div class="auth-content-left" style="margin-left: 100px;">
        <!-- <div class="auth-content"> -->
        <!-- <div class="auth-content-overlay"></div> -->
        <!-- <img src="assets/images/login_banner.png"> -->
        <!-- <div >
          <p class="p">Come lets build healthy Communities together</p>
         </div> -->
        <h5 class="p">Come lets build healthy Communities together</h5>
      </div>
    </div>
    <div class="col-sm-12 col-md-7">
      <div class="row flex-container">
        <div class="col-xl-8 col-md-8">
          <div class="login-container1">
            <div class="row">
              <div class="col-md-12">

                <div class="hpanel1">
                  <div class="panel-body">
                    <div class="text-center">

                      <img class="app-logo" src="assets/images/CareOnline.jpg" width="50%">
                      <div class="alert alert-danger alert-dismissible" *ngIf="queryErr">
                        Welcome back, looks like you are already a registered member on CareOnline platform please
                        login,
                        or if you have forgotten your password please use the
                        <a [routerLink]="[ '/Forgotpassword']" class="alert-link">
                          Forgot password </a>link to reset your password
                      </div>
                      <div *ngIf="errorMsg">
                        <h5 style="color: red;" [innerHTML]="errorMsgTxt"></h5>
                      </div>
                    </div>
                    <form [formGroup]="loginForm" (ngSubmit)="loginform()" class="app-form margin-bottom-20">
                      <div class="form-group">
                        <label class="control-label" for="username">Email Address</label>
                        <input  autocomplete="email"  type="text" placeholder="Email Address" formControlName="username"
                          class="form-control input-sm">
                        <!-- <div *ngIf="l.username.invalid && (l.username.dirty || l.username.touched)" >
                                            <div *ngIf="l.username.errors.required" style="color: red;"> Email is required</div>
                                            <div *ngIf="l.username.errors.email" style="color: red;"> Enter vaild Email</div>
                                          </div> -->
                      </div>
                      <div class="form-group">
                        <label class="control-label" for="password">Password</label>
                        <div class="input-group">
                          <!-- [type]="passwordShown ? 'password':'text'"  -->
                          <input  [type]="passwordShown ? 'password':'text'" type="password" class="form-control input-sm squareBox"
                            formControlName="password" placeholder="Password"
                            aria-describedby="basic-addon1" appBlockCopyPaste>
                          <!-- <div *ngIf="l.email.invalid && (l.email.dirty || l.email.touched)" >
                                              <div *ngIf="l.email.errors.required" style="color: red;"> Email is required</div>
                                            </div> -->
                          <span class="input-group-btn password-btn">
                            <button class="btn btn-default" style="border-radius: 0;" type="button">
                              <i class="fa" [ngClass]="{
                                                    'fa-eye': passwordShown,
                                                    'fa-eye-slash': !passwordShown
                                                  }" (click)="passwordShown = !passwordShown">
                              </i>
                            </button>
                          </span>

                        </div>
                        <div>

                        </div>
                        <!-- <input type="password" placeholder="******" formControlName="password"  class="form-control">
                                          <div class="input-group-append">
                                            <span class="input-group-text" id="basic-addon2">@example.com</span>
                                          </div>
                                          <span class="help-block small">Yur strong password</span> -->
                      </div>
                      <!-- <div class="checkbox">
                                          <input type="checkbox" class="i-checks" checked>
                                               Remember login
                                          <p class="help-block small">(if this is a private computer)</p>
                                      </div> -->
                      <button class="btn primary-btn btn-block" style="border-radius: 0;" type="submit">
                        <i class="fa fa-spinner fa-spin fa-fw" aria-hidden="true"
                          *ngIf="inviteDisable"></i>Login</button>
                      <button class="btn secondary-btn btn-block" [routerLink]="['/signUp']"
                        routerLinkActive="router-link-active">Register</button>
                      <!-- <a class="btn secondary-btn btn-block" style="border-color:#2a3e73 !important;" [routerLink]="['/signUp']" routerLinkActive="router-link-active" >Register</a> -->
                    </form>
                    <a [routerLink]="['/Forgotpassword']" routerLinkActive="router-link-active" class="forget-pass">
                      Forgot password?</a>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
  </div>
</div>

<app-footer></app-footer>
