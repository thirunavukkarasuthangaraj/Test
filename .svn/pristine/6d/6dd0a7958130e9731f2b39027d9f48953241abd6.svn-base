<ng-container *ngIf="showUI"    >
  <div class="hpanel margin-bottom-5" *ngIf="viewType=='MIN'">
    <div class="panel-heading hbuilt wig-c">
      {{ headerTitle }}
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-12">
          <ul class="profile-list" *ngIf="UserdataPeople.length != 0">
            <ng-container *ngFor="let item of UserdataPeople | slice:0:3">
              <app-common-profile-info [userIdInput]="item.userId">
                <ng-container data-toggle="tooltip" data-placement="top" title="Profile Completion" headline1>
                  {{item.name}} </ng-container>
                <ng-container data-toggle="tooltip" data-placement="top" title="Profile Completion" headline2>
                  {{item.title}} </ng-container>
                <ng-container btn>
                  <button class="btn-primary btn btn-xs" (click)="connect(item)">
                    <i class="fas fa-plus" aria-hidden="true" data-toggle="tooltip" data-placement="top"
                      title="Connect"></i> Connect </button>
                </ng-container>
              </app-common-profile-info>
            </ng-container>
          </ul>
          <p style="float: right;" *ngIf="UserdataPeople?.length > 3">
            <u><a  data-toggle="tooltip"    data-placement="top" title="More" (click)="modelopen(peopleData)">...More</a></u>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="margin-bottom-5"  *ngIf="viewType=='MAX'">
    
    <div class="panel-body cardw">
      <div class="row">
        <div class="col-3"> 
          <div class="col-md-3 padding-left-0 padding-right-5" *ngFor="let item of UserdataPeople | paginate: { itemsPerPage: 8, currentPage: page ,totalItems:totalCount } ">
              <app-user-card [userDataInput]="item" [button]="'PRIMARY'" ></app-user-card>
           </div>
        </div>

    
      </div>
    </div>

    <pagination-controls     
    class="left-page-align" (click)="pagecount(page)" (pageChange)="page = $event">
  </pagination-controls>

  </div> 
</ng-container>
