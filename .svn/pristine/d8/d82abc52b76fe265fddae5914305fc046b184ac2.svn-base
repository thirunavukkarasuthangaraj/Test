.app-form {
  &.form-inline{
    & .form-group {
      margin-bottom: 0px;
      label {
        font-size: $font-size;
        padding: 8.5px 8.5px 0;
        margin: 0;
        font-weight: 600;
      }

      & .form-control {
        border-radius: 0px;
        font-size: $font-size;
        border:1px solid $form-border-color !important;
        &:focus {
          // border-color: darken($color: $form-border-color, $amount: 5%) !important;
          // box-shadow: none;
          // outline: none;
          // outline: 0;
          outline: none;
          border-color: #9ecaed !important;
          box-shadow: 0 0 10px #9ecaed !important;
        }

        &.is-invalid {
          border-color: $form-border-color;
          border-color: #c3002f !important;
        }
      }

      .error-msg {
        position: absolute;
        right: 15px;
        font-size: 12px;
        color: #c3002f;
        font-weight: 500;

        &.alert-msg {
          top: 38px;
          right: 0 !important
        }
      }

      .date-icon {
        position: absolute;
        top: 10px;
        right: 24px;
        cursor: pointer;
      }

      .date1-icon {
        position: absolute;
        top: 10px;
        right: 14px;
        cursor: pointer;
      }
    }
  }
  & .form-group {
    margin-bottom: 16px;
    label {
      font-size: $font-size;
      padding: 8.5px 0;
      margin: 0;
    }

    & .form-control {
      border-radius: 0px;
      font-size: $font-size;
      border:1px solid $form-border-color !important;
      &:focus {
        // border-color: darken($color: $form-border-color, $amount: 5%) !important;
        // box-shadow: none;
        // outline: none;
        // outline: 0;
        outline: none;
        border-color: #76bdf8 !important;
      }

      &.is-invalid{
        border-color: $form-border-color;
        // border-color: #c3002f !important;
      }
      // input:invalid{
      //   border-color: #c3002f !important;
      // }
      
    }

    .error-msg {
      position: absolute;
      right: 15px;
      font-size: 12px;
      color: #c3002f;
      font-weight: 500;

      &.alert-msg {
        top: 38px;
        right: 0 !important
      }
    }

    .date-icon {
      position: absolute;
      top: 10px;
      right: 24px;
      cursor: pointer;
    }

    .date1-icon {
      position: absolute;
      top: 10px;
      right: 14px;
      cursor: pointer;
    }
  }

  .form-control {
    font-size: $font-size;
  }

  .form-seperater {
    padding: 30px 0;
    border-bottom: 1px solid #d6d5d5;
  }

  .form-check {
    & .form-check-input {
      position: absolute;
      z-index: -1;
      opacity: 0;

      &:checked~.form-check-label::before {
        color: #fff;
        background-color: $primary-bg;
        border: 1px solid $primary-bg;
      }

      &:checked~.form-check-label::after {
        background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'%3E%3Cpath fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26 2.974 7.25 8 2.193z'/%3E%3C/svg%3E");
      }
    }

    & .form-check-label {
      cursor: pointer;

      &::before {
        margin-right: 10px;
        display: inline-block;
        width: 1rem;
        height: 1rem;
        pointer-events: none;
        content: "";
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        background-color: #dee2e6;
        border: 1px solid #b7b6b6;
      }

      &::after {
        position: absolute;
        left: 0;
        top: 0;
        display: inline-block;
        width: 1rem;
        height: 1rem;
        content: "";
        background-repeat: no-repeat;
        background-position: center center;
        background-size: 50% 50%;
      }
    }
  }
}

.service-list {
  .form-inline .form-check {
    justify-content: left;
  }
}

.showpass-change {
  position: absolute;
  right: 24px;
  top: 12px;
  color: #333;
  font-size: 15px;
  font-weight: 500;
  cursor: pointer;
}

