
<div class="gallery-carousel">
    <div class="logo">
        <img   src="assets/images/CareOnline.png" 
        [routerLink]="['/landingPage']"  alt="" style="max-height: 7rem; cursor: pointer;">
    </div>
    <div class="offThePicture" (click)="onEvent($event)">
        <span  tabindex="1" *ngIf="images.length>1" (click)="previous()">
            <i class="fas fa-chevron-left"></i>
        </span>
        <span tabindex="2" *ngIf="images.length>1"(click)="next(images)" >
            <i class="fas fa-chevron-right"></i>
        </span>
    </div>
    <div class="carousel-image">
        <img *ngIf="images[animImage].type === 'image'" [@slide-in]="animState" (@slide-in.done)="animDone()" [src]="images[animImage].url" alt="">
        
        <video *ngIf="images[animImage].type === 'video'" width="100%" controls  class="hover-effect" #videoPlayer>
            <source [@slide-in]="animState" (@slide-in.done)="animDone()" [src]="images[animImage].url" />
        </video>
    </div>
    <div class="close11" (click)="close()">
        <span class="sdwer" aria-hidden="true">&times;</span>
      </div>

</div>