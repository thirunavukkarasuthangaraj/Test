import { Component, OnInit } from '@angular/core';
import { ApiService } from 'src/app/services/api.service';
import { UtilService } from 'src/app/services/util.service';

@Component({
  selector: 'app-busines-directory-professional',
  templateUrl: './busines-directory-professional.component.html',
  styleUrls: ['./busines-directory-professional.component.scss']
})
export class BusinesDirectoryProfessionalComponent  implements OnInit {

  hcpData = []
  page: number = 1;

  constructor(private api: ApiService, private util: UtilService) { }

  ngOnInit() {
    window.scroll({
      top: 0,
      left: 0,
      behavior: 'smooth'})
      this.getHCP()
  }

  getHCP() {
    this.util.startLoader()
    this.api.query('healthcare/gethcp/org/types?primary=true&offset=0&limit=40').subscribe(res => {
      this.util.stopLoader();
      if (res != null) {
        this.hcpData = res.data.hcpOrgtypes;
      }

    },err => {
      this.util.stopLoader(); 
    })
  }

}
