<ng-template #basicTemplate>
  <form [formGroup]="teamModalForm" class="app-form form-horizontal">
    <div class="hpanel">
      <div class="panel-heading hbuilt b-r-6 ">
        <div class="row panel-tools">
          <button type="button" class="close pull-left" aria-label="Close" (click)="close()">
            <span style="padding-right: 22px;font-size: 26px;" aria-hidden="true">&times;</span>
          </button>
        </div>
        <label class="control-label padding-top-0 margin-bottom-5 ">About</label>
      </div>
      <div class="panel-body">
        <div class="form-group row ">
          <div class="col-md-3" style="display: grid;">
            <label for="teamName" class="control-label required-field font-light float-right">Team Name</label>
          </div>

          <div class="col-md-8">
            <input type="text" class="form-control input-sm" placeholder="Team Name" formControlName="teamName"
              trim="blur" />

            <div *ngIf="submit && f.teamName.invalid || f.teamName.invalid &&
              (f.teamName.dirty || f.teamName.touched)" class="error-msg">

              <!-- <div class="red" *ngIf="f.teamName.errors.pattern">Please avoid unwanted spaces
               </div> -->
            </div>

          </div>
        </div>

        <div class="form-group row ">
          <div class="col-md-3" style="display: grid;">
            <label for="networkName" class=" control-label   font-light"> Team Logo </label>
          </div>

          <div class="col-md-8">
            <input type="file" class="form-control input-sm" accept="image/jpg, image/jpeg, image/png" #myFileInput
              (change)="fileChangeEventlogo($event, template)" (click)="myFileInput.value = null" />

          </div>
        </div>

        <div class="form-group row ">
          <div class="col-md-3" style="display: grid;">
            <label for="networkName" class=" control-label   font-light"> Team Banner Image</label>
          </div>

          <div class="col-md-8">
            <input type="file" class="form-control input-sm" accept="image/jpg, image/jpeg, image/png"
              #myFileInputbanner (change)="fileChangeEventBanner($event, templatebanner)"
              (click)="myFileInputbanner.value = null" />

          </div>
        </div>

        <div class="form-group row ">
          <div class="col-md-3" style="display: grid;">
            <label for="description" class=" control-label font-light float-right">Description</label>
          </div>

          <div class="col-md-8">
            <!-- <input type="textarea" class="form-control input-sm" placeholder="Description"
              formControlName="description"  rows="4"/> -->

            <textarea class="form-control input-sm" placeholder="Description" [ngxSummernote]="config"
              formControlName="description" name="" id="" cols="30" rows="4"></textarea>

          </div>
        </div>
      </div>
    </div>

    <div class="text-right">
      <button type="button" class="btn default-btn btn-sm canbtn" (click)="close()">Cancel</button>
      <button type="button" class="btn primary-btn btn-sm subbtn" [disabled]="!teamModalForm.valid"
        (click)="submit()">Submit</button>
    </div>
  </form>
</ng-template>



<ng-template #template>

  <!-- <button type="button" style="font-size: 31px; padding-right: 17px; padding-top: 7px" class="close pull-right"
    aria-label="Close" (click)="closePhoto()">
    <span aria-hidden="true">&times;</span>
  </button>
  <h5 style="margin: 10px 10px 10px 10px; padding-top: 10px">Team Logo </h5>
  <hr /> -->

  <div class="modal-content">
    <div style="padding: 14px 14px !important;">
      <label>Team Logo</label>
      <button type="button" class="close pull-right" aria-label="Close" (click)="closePhoto()">
        <span style="font-size: 2.5rem;" aria-hidden="true">&times;</span>
      </button>
    </div>
    <hr style="margin: 0px !important; padding: 0px !important">
    <div class="modal-body">
      <image-cropper [imageChangedEvent]="imageChangedEvent" [maintainAspectRatio]="true" format="jpeg"
        (imageCropped)="imageCropped($event)"></image-cropper>
    </div>

    <div class="modal-footer" style="border-radius: 5px;">
      <button class="btn primary-btn btn-sm" (click)="imageLoaded()">Apply</button>
    </div>
  </div>
</ng-template>



<ng-template #templatebanner>

  <!-- <button type="button" style="font-size: 31px; padding-right: 17px; padding-top: 7px" class="close pull-right"
    aria-label="Close" (click)="closePhoto()">
    <span aria-hidden="true">&times;</span>
  </button>
  <h5 style="margin: 10px 10px 10px 10px; padding-top: 10px"> Team Banner Image </h5>
  <hr /> -->

  <div class="modal-content">
    <div style="padding: 14px 14px !important;">
      <label>Team Banner Image</label>
      <button type="button" class="close pull-right" aria-label="Close" (click)="closePhoto()">
        <span style="font-size: 2.5rem;" aria-hidden="true">&times;</span>
      </button>
    </div>
    <hr style="margin: 0px !important; padding: 0px !important">
    <div class="modal-body">
      <image-cropper [imageChangedEvent]="imageChangedEvent" [maintainAspectRatio]="true" [aspectRatio]="4.5 / 1"
        format="jpeg" (imageCropped)="imageCroppedBanner($event)"></image-cropper>
    </div>

    <div class="modal-footer" style="border-radius: 5px;">
      <button class="btn primary-btn btn-sm" (click)="imageLoadedBanner()">Apply</button>
    </div>
  </div>
</ng-template>