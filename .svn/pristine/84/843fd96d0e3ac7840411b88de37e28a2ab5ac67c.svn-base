
     .business-banner-top{
        // box-shadow: 0 0 0 1px rgba(0,0,0,.15), 0 2px 3px rgba(0,0,0,.2);
        // transition: box-shadow 83ms;
      .business-banner{
        position: relative;
        margin-top: 66px;
        .banner-shadow{
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.27058823529411763);
            opacity:0;
        }
         .banner-img{
            width: 100%;
            height: 250px;
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
        }

        .banner-overlay{
            padding: 0 25px;
            .banner-edit{
                right: 25px;
                position: absolute;
                top: 25px;
                background-color: #ffffff82;
                width: 40px;
                height: 40px;
                text-align: center;
                border-radius: 4px;
                border: 1px solid #d0d0d0;
                i{
                    font-size: 24px;
                    cursor: pointer;
                    color: #232323;
                    opacity: 0.7;
                    padding-top: 7px;
                }
                input{
                   // opacity: ;
                   position: absolute;
                   right: 0;
                   z-index: 1000;
                   opacity: 0;
                   cursor: pointer;
                   width: 39px;
                   height: 25px;
                   top: 0px;
               }


            }

            .banner-profile-image{
                position: absolute;
                bottom: 25px;
                img{
                    width: 92px;
                    height: 92px;
                    //border: 0.5px solid #ffffff;
                }
            }
        }
    }

    .business-details{
        padding: 10px;
        background: #fff;
        border-radius: 2px;
        margin: 0;

        .business-name{
          //  text-transform: capitalize;
            font-size: 18px;
            color: #000;
            margin-bottom: 3px;
        }
        .business-tag{
          //  text-transform: capitalize;
            // font-size: 15px;
            // margin-bottom: 3px;
            display: flex;
            font-size: 13px;
            font-weight: 500;
            column-gap: 0.3rem;
        }
        .business-others {
            // text-transform: capitalize;
            font-size: 13px;
            margin-bottom: 3px;
            display: flex;
            column-gap: 0.3rem;
        }
        .website{
            text-transform: lowercase !important;
            font-size: 13px;
        }
    }

}

// Business Navigation
   .business-menu{
        // background-color: #fff;
        // border: 1px solid #64707924;

    ul{
        margin: 0;
        padding: 0;
        li{
            // border-bottom: 1px solid rgba(0,0,0,.15);
            a{
                padding: 12px 16px;
                display: inline-block;
                width: 100%;
                font-size: 14px;
                line-height: 20px;
                font-weight: 600;
                color: rgba(0,0,0,.6);
                &:hover{
                    text-decoration: none;
                    color:rgba(0,0,0,.75);
            }
            }

        }
    }

}

// Business Big list

.business-list-view {
    .business-list-view-search{
        background-color: #fff;
        padding: 15px;
        button{
            min-width: 120px;
        }
    }
    .business-list-view-list{
        width: 100%;
        display: block;
        padding: 15px;
        background-color: #fff;
        min-height: 120px;

        .list-image{
            display: inline-block;
            width: 12%;
            position: relative;
            text-align: center;
            float: left;
            margin-right: 10px;
            img{
                width: 75px;
                border: 1px solid #d3d3d3;
                border-radius: 50%;
                height: 75px;
            }
        }

        .list-details{
            display: inline-block;
            float: left;
            position: relative;
            width: 60%;
            h5{
                font-size: 16px;
                color: #333;
                font-weight: 600;
                // margin-top: 0;
            }
        }

        .list-button{
            width: 20%;
            display: inline-block;
            float: left;
            // margin: 28px 0;
            p{
                margin: 5px 0;
            }
        }

        .list-connect{
            width: 6%;
            display: inline-block;
            float: left;

            .list-drilldown{
                width: 40px;
                height: 40px;
                text-align: center;
                padding: 7px 0;
                cursor: pointer;
                margin: 25px 0;
                i{
                    font-size: 22px;
                }
            }
        }
    }
}
