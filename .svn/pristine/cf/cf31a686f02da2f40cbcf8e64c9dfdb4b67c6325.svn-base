<div class="modal-content">



  <!-- <div class="modal-header" style="padding: 7px !important ; border-radius: 8px;"> -->
  <!-- <div class="main"> -->
  <div style="padding: 14px 14px !important;">
    <label>Create Team</label>
    <button type="button" class="close pull-right" aria-label="Close" (click)="modelhide()">
      <span style="font-size: 2.5rem;" aria-hidden="true">&times;</span>
    </button>
  </div>
  <hr style="margin: 0px !important; padding: 0px !important">
  <!-- <div>
      <h4> Create Team</h4>
    </div>
    <div>
      <button type="button" class="close pull-right close-model" aria-label="Close" (click)="modelhide()">
        <span aria-hidden="true">&times;</span>
      </button>
    </div> -->

  <!-- </div> -->
  <!-- </div> -->
  <div class="modal-body">
    <div [formGroup]="teamForm">
      <div class="app-form">
        <div class="row ">
          <div class="col-md-8 discol">
            <div class="form-group mt-10">
              <label for="teamName" class="required">Team Name</label>
              <div>
                <input type="text" class="form-control input-sm" formControlName="teamName"
                  placeholder="Please Enter a Team Name" trim="blur" />
                <div *ngIf="submit && f.teamName.invalid || f.teamName.invalid &&
                (f.teamName.dirty || f.teamName.touched)" class="error-msg">

                  <!-- <div class="red" *ngIf="f.teamName.errors.pattern">Please avoid unwanted spaces   </div> -->
                </div>

              </div>
            </div>

            <div>
              <div class="mt-10">
                <label for="">Team Logo</label>
              </div>
              <div>
                <input type="file" class="form-control input-sm" accept="image/jpg, image/jpeg, image/png" #myFileInput
                  (change)="fileChangeEvent($event, template)" (click)="myFileInput.value = null" />

              </div>
            </div>

            <div>
              <div class="mt-10">
                <label for="">Current Organization</label>
              </div>
              <div>
                <ng-select [items]="businesslistData" [hideSelected]="true" dropdownPosition="bottom"
                  formControlName="businessId" bindLabel="businessName" placeholder="Current Organization"
                  [(ngModel)]="orgselected" (change)="ngOnChanges()">
                  <ng-template ng-option-tmp let-item="item" let-item$="item$" let-index="index">
                    <div class="custom-control custom-radio flex">
                      <img *ngIf="item.businessLogo!=null" class="img-show-hide" src="{{url+item.businessLogo}}">
                      <img *ngIf="item.businessLogo==null" class="img-show-hide"
                        src="assets/images/gallery/company.png">
                      <label class="form-radio-label ml-2 custom-control-label">{{item.businessName}}</label>
                    </div>
                  </ng-template>

                </ng-select>
              </div>
              <div  *ngIf="f['businessId'].hasError('organizationRequired')" class="error-msg">
                <div *ngIf="f.businessId.errors" style="color: red;float: right;">
                  You are not part of any business page.
                </div>
              </div>
            </div>
            <div>
              <div class="mt-10">
                <label for="">Add Connection</label>
              </div>
              <div>

                <ng-select [multiple]="true" [items]="conditionList" [hideSelected]="false" [closeOnSelect]="false"
                  [(ngModel)]="conditionSelectedItems" name="licenseAuthorityId" bindValue="userId" bindLabel="userName"
                  [hideSelected]="true" formControlName="addconnection" placeholder="Add Connection"
                  [closeOnSelect]="false">
                  <ng-template ng-option-tmp let-item="item" let-item$="item$" let-index="index">
                    <div class="custom-control custom-radio flex">
                      <input id="item-{{index}}" type="checkbox" [checked]="false" name="item-{{index}}"
                        [ngModelOptions]="{ standalone : true }" [ngModel]="item$.selected"
                        style="margin-right:5px; margin-top: 9px;">
                      <img *ngIf="item.photo!=null" class="img-show-hide" src="{{url+item.photo}}">
                      <img *ngIf="item.photo==null" class="img-show-hide" src="assets/images/userAvatar.png">
                      <label class="form-radio-label ml-2 custom-control-label">{{item.userName}}</label>
                    </div>
                  </ng-template>

                </ng-select>
              </div>
              <div *ngIf="f.addconnection.invalid && f.addconnection.dirty || f.addconnection.touched">
                <div *ngIf="f.addconnection.errors" style="color: red;float: right;">
                  At least one connection is required
                </div>
              </div>
            </div>
            <div>
              <div class="mt-10">
                <label for="">Description</label>
              </div>
              <div>
                <div class="form-group">
                  <textarea class="form-control input-sm" placeholder="Description" [ngxSummernote]="config"
                    formControlName="description" name="" id="" rows="3"></textarea>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            <div>
              <label for="">How it works?</label>
            </div>
            <div>
              <p>
                You can create personal Networks and add your Connections to
                specific Networks.
              </p>
              <p>
                You can connect, share and collaborate with your connections in
                specific Network as a group.
              </p>
            </div>
            <div style="text-align: center;">
              <img src="assets/icon/img.png" alt="" srcset="" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer paddFotter" style="border-radius: 5px;">
    <button type="button" class="btn default-btn btn-sm canbtn m-r-6" (click)="modelhide()">
      Cancel
    </button>
    <button type="button" class="btn primary-btn btn-sm  btn-pri subbtn m-r-20" [disabled]="!teamForm.valid"
      (click)="save()">
      Create
    </button>

    <!-- <div class="text-right">
    <button type="button" class="btn default-btn btn-sm canbtn" (click)="close()">Cancel</button>
    <button type="button" class="btn primary-btn btn-sm subbtn" [disabled]="!networkModalForm.valid" (click)="submit()">Submit</button>
  </div> -->
  </div>
</div>



<ng-template #template>
  <!-- <button type="button" style="font-size: 31px; padding-right: 17px; padding-top: 7px" class="close pull-right"
    aria-label="Close" (click)="closePhoto()">
    <span aria-hidden="true">&times;</span>
  </button>
  <h5 style="margin: 10px 10px 10px 10px; padding-top: 10px">Team Logo</h5>
  <hr /> -->

  <div class="modal-content">

    <div style="padding: 14px 14px !important;">
      <label>Team Logo</label>
      <button type="button" class="close pull-right" aria-label="Close" (click)="closePhoto()">
        <span style="font-size: 2.5rem;" aria-hidden="true">&times;</span>
      </button>
    </div>
    <hr style="margin: 0px !important; padding: 0px !important">
    <div class="modal-body">
      <image-cropper [imageChangedEvent]="imageChangedEvent" [maintainAspectRatio]="true" format="jpeg"
        (imageCropped)="imageCropped($event)"></image-cropper>
    </div>

    <div class="modal-footer" style="border-radius: 5px;">
      <button class="btn primary-btn btn-sm" (click)="imageLoaded()">Apply</button>
    </div>
  </div>

</ng-template>