.directory-profile{
    background-color: #f1f3f6;
    padding-top: 15px;

    .panel-heading{
        font-size: 14px;
        color: #333;
    }

    .hpanel{
        margin-bottom: 15px;
    }

    .panel-body{
        color: #333;
    }

    .dir-profile-lf-personal{

        margin-bottom: 15px;
        position: relative;

        .dir-banner{
            .banner-img{
                width: 100%;
                height: 250px;
                background-repeat: no-repeat;
                background-position: center;
                background-size: cover;
            }
        }

        .profile-image{

            .profile-inside{

                img{
                    width: 60px;
                    height: 60px;
                    border-radius: 40px;
                }

                .img-details{
                    padding-top: 10px;

                    .label-details{
                        font-size: 14px;
                        color: #afafaf;
                        font-weight: 600;
                        text-transform: uppercase;
                    }

                    .name-details{
                        font-size: 14px;
                        color: #504b4b;
                        font-weight: 600;
                    }
                }
            }
        }

        .dir-profile-details{
            background-color: #ffffff;
            padding: 20px;
            display: flex;
            position: relative;
            justify-content: space-between;
            align-items: center;

            .profile-details{
                padding-top: 10px;
                padding-left: 6px;

                .profile-image{
                    position: absolute;
                    top: -40px;
                    left: 38px;

                    img{
                        width: 60px;
                        height: 60px;
                        border-radius: 40px;
                        border: 2px solid #efefef;
                    }
                }

                .pro-details{

                    p{
                        margin-bottom: 5px;

                        &.name{
                            font-size: 15px;
                            font-weight: 600;
                            color: #333;
                        }


                        &.special{
                            font-size: 14px;
                            font-weight: 500;
                            color: #9a9999;
                        }

                        &.area{
                            font-weight: 600;
                        }

                        &.address{
                            font-size: 14px;
                            font-style: italic;
                        }
                    }
                }
            }
        }
    }

    .dir-profile-lf-similar{

        .similar-card{
            display: flex;
            margin-bottom: 15px;

            img{
                width: 60px;
                height: 60px;
            }

            .similar-details{
                padding-left: 8px;
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                justify-content: center;

                p{
                    margin-bottom: 5px;

                    &.dr-name{
                        color: #0070C0;
                        font-size: 14px;
                        font-weight: 600;
                    }

                    &.dr-other{
                        color: #333;
                        font-weight: 600;
                    }
                }
            }
        }
    }

    .dir-profile-lf-work{

        .dir-card-logo{
            text-align: center;

            img{
                width: 90px;
                height: 90px;
            }
        }

        .dir-card-details{

            p{
                margin-bottom: 5px;
            }

            .card-details-position{
                font-size: 14px;
                font-weight: 600;
            }

            .card-details-name{
                font-weight: 600;
                color: #7b7b7b;
            }

            address{
                font-size: 14px;
                font-weight: 600;
                font-style: italic;
                color: #949494;
                margin-bottom: 5px;
            }

            .card-details-duration{
                font-size: 14px;
            }
        }
    }

    .dir-profile-lf-education{

        .dir-card-logo{
            text-align: center;

            img{
                width: 90px;
                height: 90px;
            }
        }

        .dir-card-details{

            p{
                margin-bottom: 5px;
            }

            .card-details-position{
                font-size: 14px;
                font-weight: 600;
            }

            .card-details-name{
                font-weight: 600;
                color: #7b7b7b;
            }

            address{
                font-size: 14px;
                font-weight: 600;
                font-style: italic;
                color: #949494;
                margin-bottom: 5px;
            }

            .card-details-duration{
                font-size: 14px;
            }
        }
    }

    .dir-profile-lf-bottom{

        .bottom-login{
            text-align: center;
            font-size: 14px;

            p{
                span{
                    text-decoration: underline;
                    color: #0070C0;
                    font-weight: 600;
                }
            }
        }
    }
}