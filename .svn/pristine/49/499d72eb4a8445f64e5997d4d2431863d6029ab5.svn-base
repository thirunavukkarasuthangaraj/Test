@mixin flex {
    box-sizing: border-box;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}

@mixin transition($time, $anime) {
    -webkit-transition: all $time $anime;
    -moz-transition: all $time $anime;
    -ms-transition: all $time $anime;
    -o-transition: all $time $anime;
    transition: all $time $anime;
}