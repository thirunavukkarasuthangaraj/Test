.app-header {
  //background-color: $primary-bg;
  background-color: #fff;
  color: $primary-fg;
  box-shadow: 0 1px 8px $box-shadow-color;
  z-index: 999 !important;
  border-width: 0 0 1px;
  border-radius: 0;

  & .app-side-bar-button {
    background: transparent;
    color: $primary-fg;
    margin-right: 8px;

    &.cdk-focused {
      outline: none
    }
  }

  & .navbar-brand {
    margin: 0 !important;
    padding: 0;

    img {
      // width: 140px;
      // vertical-align: text-top;
      // top: 2px;
      // position: relative;
      /* width: 140px; */
      vertical-align: text-top;
      top: 2px;
      position: relative;
      left: 57px;
    }
  }

  &.before-login {
    & .navbar-nav>li {
      height: auto;

      .navbar-btn {
        background-color: $primary-fg;
        color: $primary-bg;
        border-radius: 0;
        border: 2px solid $primary-bg;
        font-weight: 600;

        &:hover,
        &:active,
        &:focus {
          background-color: $primary-bg;
          transition: 0.3s;
          color: #fff;
        }
      }
    }
  }

  &.after-login {
    .navbar-form {
      width: 55%;
      padding-left: 140px;

      .form-group {
        width: 90%;

        .form-control {
          width: 100%;
        }
      }
    }

    & .navbar-nav>li,
    .navbar-nav>li>a {
      height: auto;
    }

    .navbar-right {
      margin-right: 0;

      ul.nav {
        li {
          &.showmore {
            a {
              background-color: #b7b7b7;
              color: #333 !important;
              text-align: center;
              padding: 5px 20px;

              &:focus,
              &:hover {
                background-color: #b7b7b7 !important;
                color: #000 !important;
              }
            }
          }

          &.menu-item {
            a {
              line-height: inherit;
              color: #9f9b9b;

              &:focus,
              &:hover {
                background-color: #f1f3f6;
                border-bottom: none;
                color: #000;
              }

              i {
                font-size: 20px;
              }


            }
          }

        }
      }

      .profile-img {
        cursor: pointer;

        .dropdown-menu {
          border-radius: 0;

          li {
            a {
              color: #333 !important;
              padding: 5px 20px;

              &:focus,
              &:hover {
                background-color: #eaeaea !important;
                color: #000 !important;
              }
            }
          }
        }
      }

    }

    .profile-img {
      img {
        height: 37px;
        width: 37px;
        margin-top: 9px;
        // border: 2px solid #d2dceb;
      }
    }
  }



  & .header-profile {
    .dropdown {
      a {
        cursor: pointer;
        text-transform: capitalize;
        color: #fff;

        i {
          font-size: 18px;
          padding-right: 4px;
        }

        b {
          padding-left: 8px;
        }
      }

      .dropdown-menu {
        border-radius: 0px;
        box-shadow: 0 1px 8px rgba(0, 0, 0, 0.3);
        border: 0px;
        font-size: 14px;

        a {
          padding: 0.5rem 1rem;
          color: #212529 !important;

          i {
            padding-right: 28px;
          }
        }
      }
    }
  }

}


.notification-dropdown>li>a {
  padding: 8px 20px !important;
}
