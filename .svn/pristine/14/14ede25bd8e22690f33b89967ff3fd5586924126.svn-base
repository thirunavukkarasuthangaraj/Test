.directory-content{
    margin-top: 52px;
}

.breadcrumbs{
    background-color: #D9E1F2;
    padding: 10px 20px;
    ul{
        list-style: none;
        margin: 0;
        display: inline-block;
        vertical-align: middle;
        padding-inline-start: 0;
        li{
            float: left;
            padding-right: 10px;
            color: #333;
        }
    }
}



.directory-title{
    background-color: #fff;
    padding: 15px 20px;
    border-bottom: 1px solid #e7e7e7;
    
    h3{
        margin: 0;
        font-weight: 500;
        color: #0070C0;
    }
}


.directory-card-section{
    padding: 40px 0;
    background: #fff;
    

    .dir-card{
        border: 1px solid #e7e7e7;
        box-shadow: 0px 0.1px 9px #f5f5f5;
        padding: 15px;
        width: 100%;
        display: flex;
        cursor: pointer;
        min-height: 80px;

        .img-section{
            width: 40%;
            img{
                width: 90px;
            }
        }

        .content-section{
            width: 60%;
            align-items: center;
            display: flex;
            font-size: 15px;
            color: #0070C0;
            font-weight: 600;
        }
    }
}

.directory-list-section{
    padding: 40px 0;
    background: #fff;

    ul{
        list-style: none;

        li{
            padding-right: 1.5em;
            line-height: 30px;

            a{
                font-size: 15px;
                color: #0070C0;
                font-weight: 600;
            }
        }
    }
}

.directory-search-footer{
    background-color: #ffffff;
    border-top: 1px solid #e7e7e7;

    .search-by-content{
        display: flex;
        align-items: center;
        padding: 20px 0;

        span{
            font-size: 14px;
            color: #333;
            font-weight: 600;
        }

        ul{
            display: flex;
            list-style: none;
            margin: 0;
            padding-inline-start: 80px;

            li{
                padding-right: 50px;
                font-size: 14px;
                font-weight: 600;

                a{
                    color: #0070C0;
                    cursor: pointer; 
                }
            }
        }
    }
}
