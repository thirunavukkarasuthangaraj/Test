version: 0.2

env:
    variables:
        S3_BUCKET: "gigsumo-ui"
        BUILD_ENV: "uat"
phases:
 install:
    runtime-versions:
        nodejs: 12
    commands:
    - echo $CODEBUILD_SRC_DIR
    - npm install -y npm@latest
    - npm install -g @angular/cli@8.3.25
    - rm package-lock.json
 pre_build:
    commands:
    - npm install
    - npm i -D typescript@3.4.5
 build:
    on-failure: ABORT
    commands:
    - echo build started on `date`
    - ./node_modules/@angular/cli/bin/ng build -c=uat
    - ls -l -F
 post_build:
    commands:
            # Clear S3 bucket.
            - aws s3 rm s3://${S3_BUCKET} --recursive
            - echo S3 bucket is cleared.
            - aws s3 cp dist/CareOnLine s3://${S3_BUCKET} --recursive
            - echo Build completed on `date`
artifacts:
    files:
        - '**/*'
    discard-paths: yes
    base-directory: 'dist*'
cache:
  paths:
    - node_modules/
